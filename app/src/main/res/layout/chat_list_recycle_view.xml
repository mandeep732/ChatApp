<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/profileImage_chat_recycleView"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="@color/gray1"
        app:civ_border_width="1dp"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/profileImage_chat_recycleView"
        android:gravity="center_vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/name_chat_recycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="16dp"
                android:textColor="@color/gray1"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/lastMsgTime_chat_recycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:12 pm"
                android:textSize="10dp"
                android:textColor="@color/violet"
                android:textStyle="bold"
                android:paddingLeft="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/lastMessage_chat_recycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="last message of user"
                android:textSize="14dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:textColor="@color/gray2"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/messageCount_chat_recycleView"
                android:src="@mipmap/ic_launcher"
                android:padding="1dp"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>